{{define "search"}}
<page>
	<searchHeader placeholder="یک واژه یا عبارت بنویسید ..." action="search/"></searchHeader>
	{{if .status}}
		{{if gt .result.NumFound 0}}
			{{range .result.Results}}
				<card>	
					<image style="normal" src="https://vajehyab.zibaei.net/static/vajehyab.png"/>	
					<text>{{.Title}} - <small>{{.Source}}</small></text>
					<text>{{.Text}}</text>		
				</card>
			{{end}}
		{{else}}
			<text>موردی یافت نشد</text>
		{{end}}
	{{end}}
	
	{{if gt (.list | len) 0}}
	<divider />
	<text>شما جستجو کردید : </text>
	{{range .list}}	
		<card style="small" action="/history/{{.Query}}">
			<image style="normal" src="https://vajehyab.zibaei.net/static/vajehyab.png"/>
			<text style="quoted">{{.Query}}</text>			
		</card>
	{{end}}
	<divider />
	{{end}}	
	
	<footer>
		<primaryAction action="@exit">
			خروج
		</primaryAction>
		<secondaryAction action="">
			صفحه اصلی
		</secondaryAction>
	</footer>
</page>
{{end}}